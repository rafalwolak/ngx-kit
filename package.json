{
  "name": "ngx-kit-src",
  "version": "6.1.0",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./dist-server && rimraf ./covarage && rimraf ./tmp",
    "core:playground": "ng serve --project=core-playground",
    "core:build": "npm run core:build:packgr && npm run core:build:release && npm run schematics:build && npm run core:build:publish",
    "core:build:packgr": "ng build --project=core",
    "core:build:release": "node ./packages/core/release.js",
    "core:build:publish": "publish-build.sh core",
    "collection:playground": "ng serve --project=collection-playground",
    "collection:build": "npm run collection:build:clean && npm run collection:build:release && npm run collection:build:schematize && npm run collection:build:tsc && npm run collection:build:publish",
    "collection:build:clean": "rimraf ./dist/collection",
    "collection:build:release": "node ./packages/collection/release.js",
    "collection:build:schematize": "ngx-kit schematize ./packages/collection/.schematize-schema.json",
    "collection:build:tsc": "tsc -p ./dist/collection/tsconfig.json",
    "collection:build:publish": "publish-build.sh collection",
    "schematics:build": "tsc -p ./packages/schematics/tsconfig.json && node ./release-schematics",
    "website:serve": "ng serve --project=website",
    "website:docgen": "npm run website:docgen:core && npm run website:docgen:collection",
    "website:docgen:core": "node ./dist/docgen/cli -p ./packages/core/ -o ./website/app/content/core.json",
    "website:docgen:collection": "node ./dist/docgen/cli -p ./packages/collection/ -o ./website/app/content/collection.json",
    "website:build": "ng run website:build:production",
    "website:server:build": "ng run website:server:production",
    "website:server:bundle": "webpack --config ./website/webpack.server.config.js --progress --colors",
    "website:server:serve": "node ./dist/server",
    "website:deploy": "npm run clean && npm run docgen:build && npm run website:docgen && npm run website:build && npm run website:server:build && npm run website:server:bundle && npm run website:docker:build && npm run website:docker:push",
    "website:docker:build": "docker build -t dhub.nvx.me:443/ngx-kit-website-prod .",
    "website:docker:run": "docker run -d -p 8002:8000 dhub.nvx.me:443/ngx-kit-website-prod",
    "website:docker:push": "docker push dhub.nvx.me:443/ngx-kit-website-prod",
    "release:build": "npm run test && npm run lint && npm run core:build && npm run collection:build",
    "release:publish": "npm publish ./tmp/core-builds --access=public && npm publish ./tmp/collection-builds --access=public",
    "test": "ng test --watch=false",
    "test:watch": "ng test --watch=true",
    "lint": "npm run lint:ng && npm run lint:styles",
    "lint:ng": "ng lint --project=website",
    "lint:styles": "stylelint ./{packages/collection,playground,website}/**/*.scss",
    "lint:styles:fix": "stylelint ./{packages/collection,playground,website}/**/*.scss --fix",
    "docgen:build": "tsc -p ./packages/docgen/tsconfig.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.2",
    "@angular/common": "^6.1.2",
    "@angular/compiler": "^6.1.2",
    "@angular/compiler-cli": "^6.1.2",
    "@angular/core": "^6.1.2",
    "@angular/forms": "^6.1.2",
    "@angular/http": "^6.1.2",
    "@angular/language-service": "^6.1.2",
    "@angular/platform-browser": "^6.1.2",
    "@angular/platform-browser-dynamic": "^6.1.2",
    "@angular/router": "^6.1.2",
    "@angular/service-worker": "^6.1.2",
    "@nvxme/ngx-md-render": "^1.0.0-alpha.5",
    "hammerjs": "^2.0.8",
    "moment": "^2.22.2",
    "rxjs": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.7.3",
    "@angular-devkit/build-ng-packagr": "^0.7.3",
    "@angular-devkit/core": "^0.7.3",
    "@angular-devkit/schematics": "^0.7.3",
    "@angular/cli": "^6.1.3",
    "@angular/platform-server": "^6.1.2",
    "@angularclass/hmr": "^2.1.3",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@ngx-kit/schematics": "^1.1.2",
    "@types/express": "^4.11.1",
    "@types/glob": "^5.0.35",
    "@types/hammerjs": "^2.0.35",
    "@types/highlight.js": "^9.12.2",
    "@types/jasmine": "^2.8.2",
    "@types/node": "^10.5.7",
    "awesome-typescript-loader": "^5.2.0",
    "codelyzer": "^4.4.3",
    "core-js": "^2.5.2",
    "express": "^4.16.3",
    "front-matter": "^2.3.0",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.2",
    "jasmine": "^3.2.0",
    "jasmine-core": "^3.2.0",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.1",
    "karma-jasmine": "^1.1.1",
    "karma-jasmine-html-reporter": "^1.2.0",
    "ncp": "^2.0.0",
    "ng-packagr": "^3.0.6",
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "stylelint": "^9.4.0",
    "stylelint-order": "^0.8.1",
    "tslint": "^5.8.0",
    "typescript": "2.7.2",
    "webpack-cli": "^3.1.0",
    "yargs-parser": "^10.1.0"
  }
}
